{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "target": "es2015",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["../apps/**/*", "./**/*"],
  "exclude": ["../apps/banglerun", "../apps/hebrew_calendar"]
}
